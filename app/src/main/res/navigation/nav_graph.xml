<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.lawlett.musicplayer.ui.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_historyFragment"
            app:destination="@id/historyFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.lawlett.musicplayer.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_yearsFragment"
            app:destination="@id/yearsFragment" />
    </fragment>
    <fragment
        android:id="@+id/yearsFragment"
        android:name="com.lawlett.musicplayer.ui.years.YearsFragment"
        android:label="fragment_years"
        tools:layout="@layout/fragment_years" >
        <action
            android:id="@+id/action_yearsFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>